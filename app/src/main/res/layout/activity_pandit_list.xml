<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e9e7"
    tools:context=".user.panditList">

    <EditText
        android:id="@+id/searchPanditBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:drawableRight="@android:drawable/ic_menu_search"
        android:fontFamily="@font/capriola"
        android:hint="Type in Pandit Ji name or pincode"
        android:textSize="15sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/panditList_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/searchPanditBox">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>