<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardMaxElevation="5dp">

    <RelativeLayout
        android:id="@+id/panditListRL"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/panditName"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ListPic"
            android:fontFamily="@font/capriola"
            android:text="Pandit1"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/detailsText"
            android:layout_alignStart="@+id/panditName"
            android:isIndicator="true"
            android:numStars="5"
            android:progressBackgroundTint="#bfbfbe"
            android:progressTint="#ffe733" />

        <TextView
            android:id="@+id/detailsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/panditName"
            android:fontFamily="@font/capriola"
            android:text=""
            android:textColor="@color/reg_theme_person"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/ListPic"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            card_view:srcCompat="@drawable/logo" />

    </RelativeLayout>

</android.support.v7.widget.CardView>